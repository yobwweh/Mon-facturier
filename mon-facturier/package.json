{
  "name": "mon-facturier-ci",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "public/electron.cjs",
  "author": "Yoboué N'Guessan Armel Constant",
  "description": "Application de facturation CI",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "html2pdf.js": "^0.12.1",
    "lucide-react": "^0.294.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-to-print": "^3.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "vite": "^5.3.1"
  },
  "build": {
    "appId": "com.monfacturier.app",
    "productName": "Mon Facturier CI",
    "copyright": "Copyright © 2025 Yoboué Armel",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/electron.cjs",
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
